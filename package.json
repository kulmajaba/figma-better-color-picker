{
  "name": "figma-better-color-picker",
  "version": "1.0.0",
  "description": "A better color picker for sRGB colors.",
  "main": "code.js",
  "scripts": {
    "start": "npm run dev",
    "build": "rm -rf dist/* && npm run build:ui && npm run build:main:prod -- --minify",
    "build:main:prod": "esbuild src/plugin.ts --bundle --outfile=dist/plugin.js --define:BASE_URL=\\\"https://colorpicker.kulmajaba.com/\\\"",
    "build:main:dev": "esbuild src/plugin.ts --bundle --outfile=dist/plugin.js --define:BASE_URL=\\\"http://localhost:5173/\\\"",
    "build:ui": "vite build --emptyOutDir=false --minify=false",
    "build:watch": "npm run build:main:dev -- --watch",
    "dev": "concurrently -n build,vite 'npm:build:watch' 'vite'",
    "tsc:main": "tsc --noEmit -p ."
  },
  "author": "Mika Kuitunen",
  "license": "MIT License",
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^3.0.1",
    "esbuild": "^0.17.5",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.0.4"
  }
}
