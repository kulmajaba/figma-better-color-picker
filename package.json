{
  "name": "figma-better-color-picker",
  "version": "1.0.0",
  "description": "A better color picker for sRGB colors.",
  "main": "code.js",
  "scripts": {
    "start": "npm run dev",
    "build": "rm -rf dist/* && npm run build:ui && npm run build:main:prod",
    "build:main": "./node_modules/.bin/vite build --config=vite-main.config.js --emptyOutDir=false",
    "build:main:prod": "npm run build:main",
    "build:main:dev": "npm run build:main -- --mode development --minify=false --watch",
    "build:ui": "vite build --config=vite-ui.config.js --emptyOutDir=false --minify=false",
    "dev": "concurrently -n plugin,ui 'npm:build:main:dev' 'vite --config=vite-ui.config.js'",
    "tsc": "tsc --noEmit -p .",
    "lint": "eslint ."
  },
  "author": "Mika Kuitunen",
  "license": "MIT License",
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@vitejs/plugin-react": "^4.1.0",
    "classnames": "^2.3.2",
    "figma-plugin-api": "^1.0.1",
    "mathjs": "^11.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.4.11"
  }
}
