{
  "name": "figma-better-color-picker",
  "version": "1.0.0",
  "description": "A better color picker for sRGB colors.",
  "main": "code.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "build": "rm -rf dist/* && npm run build:ui && npm run build:main:prod",
    "build:main": "./node_modules/.bin/vite build --config=vite-main.config.js --emptyOutDir=false",
    "build:main:prod": "npm run build:main",
    "build:main:dev": "npm run build:main -- --mode development --minify=false --watch",
    "build:ui": "vite build --config=vite-ui.config.js --emptyOutDir=false --minify=false",
    "dev": "concurrently -n plugin,ui 'npm:build:main:dev' 'vite --config=vite-ui.config.js'",
    "tsc": "tsc --noEmit -p .",
    "lint": "eslint ."
  },
  "author": "Mika Kuitunen",
  "license": "MIT License",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "^0.14.0",
    "@figma/plugin-typings": "^1.87.0",
    "@types/react": "^18.2.59",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "classnames": "^2.5.1",
    "figma-plugin-api": "^1.1.0",
    "mathjs": "^12.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.1.4"
  }
}
